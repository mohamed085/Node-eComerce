<header class="header header-5">
    <div class="header-middle sticky-header">
        <div class="container-fluid">
            <div class="header-left">
                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>

                <a href="/" class="logo">
                    <img src="/assets/images/logo-1.png" alt="Molla Logo" width="105" height="25">
                </a>

                <nav class="main-nav">
                    <ul class="menu sf-arrows">
                        <li class="megamenu-container <%= path === '/' ? 'active' : '' %>">
                            <a href="/" class="sf-with-ul">Shop</a>
                        </li>
                        <li class="megamenu-container <%= path === '/products' ? 'active' : '' %>">
                            <a href="/products" class="sf-with-ul">Products</a>
                        </li>
                            <li class="megamenu-container <%= path === '/admin/orders' ? 'active' : '' %>">
                                <a href="/admin/orders" class="sf-with-ul">Orders</a>
                            </li>
                        <li class="megamenu-container <%= path === '/admin/products' ? 'active' : '' %>">
                            <a href="/admin/products" class="sf-with-ul">Admin products</a>
                        </li>
                        <li class="megamenu-container <%= path === '/admin/add-product' ? 'active' : '' %>">
                            <a href="/admin/add-product" class="sf-with-ul">Admin add products</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="header-right">
                <form action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class=" btn-primary " style="padding: 0 10px; margin: 0 10px; border: none " type="submit">Log out</button>
                </form>
            </div>
        </div>
    </div>
</header>
